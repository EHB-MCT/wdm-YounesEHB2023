FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install --legacy-peer-deps

# Copy source code
COPY . .

# Expose dev server port
EXPOSE 5173


# Start development server with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]